<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:src="@drawable/map"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitudes de pasajeros"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <Switch
        android:layout_marginTop="20dp"
        android:text="María del Carmen Garrido Gámez"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch2" />
    <Switch
        android:text="Ignacio Fuentes Lasaga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Switch
        android:text="Eduardo Fernández Redondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Switch
        android:text="Francisca Carrasco Cahuchola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificiar Ruta"
        android:layout_gravity="right"/>

</LinearLayout>